{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiGateway": {
    "Routes": {
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "post-route": {
        "ClusterId": "post-cluster",
        "Match": {
          "Path": "/api/posts/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "user-destination": {
            "Address": "https://localhost:7001/"
          }
        }
      },
      "post-cluster": {
        "Destinations": {
          "post-destination": {
            "Address": "https://localhost:7002/"
          }
        }
      }
    }
  }
}
